---
import { SITE_DESCRIPTION, SITE_TITLE } from "../config";
import Footer from "./footer.astro";
import Header from "./header.astro";
import Meta from "./meta.astro";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Meta title={title ? `${title} Â· ${SITE_TITLE}` : SITE_TITLE} description={description ?? SITE_DESCRIPTION} />
    <!-- Add this script to head -->
    <script is:inline>
      const savedTheme = localStorage.getItem('theme') || 'light--warm';
      document.documentElement.setAttribute('data-new-ui-theme', savedTheme);
    </script>
  </head>
  <body>
    <Header />
    <main>
      <div class="front-page">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>