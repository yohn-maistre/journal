---
import { SITE_LOGO, SITE_TITLE } from "./src/config";
import Menus from "./src/components/menus.astro";
import ThemeToggle from "./src/components/theme-toggle.astro";
---

<header id="site-header">
  <nav>  
    <a href="/journal" class="logo">
      <img src={SITE_LOGO} alt="journal" width="24" height="24" />
      <span>{SITE_TITLE}</span>
    </a>
    <div class="nav-right">
      <ThemeToggle />
      <Menus />
    </div>
  </nav>
</header>

<style>
  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  :global(.theme-toggle) {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--text-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :global(.theme-toggle:hover) {
    background: var(--hover-bg);
  }
</style>
